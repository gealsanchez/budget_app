<div class="d-flex flex-column align-items-center bg_gray">
  <% flash.each do |type, msg| %>
        <div>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
  <% end %>

  <h1 class="mt-3">Categories</h1>
  <p><%= "Total: U$ #{@current_user.total_expenses} " %></p>
  <div id="groups" class="d-flex justify-content-center flex-wrap  full-width">
    <% @groups.each do |group| %>
      <%= render group %>
    <% end %>
  </div>

  <%= link_to "Add Category", new_group_path, :method=> :get, class: "btn-secondary mt-3 full-width btn-h link_btn" %>
</div>

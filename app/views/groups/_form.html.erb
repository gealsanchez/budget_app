<%= form_with model: @group, url: groups_path, method: :post, class: "d-flex flex-column align-items-center" do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> Category has not been saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-center flex-wrap p-2">
    <% 12.times do |i| %>
      <div class="m-1">
        <%= form.radio_button :icon, "img_icon#{i}" %>
        <%= form.label "icon_img_icon#{i}".to_sym do %>
          <%= content_tag :div, "", id: "img_icon#{i}", class: "img_icon"  %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.submit "Save", class: "btn btn-secondary" %>
  </div>
<% end %>
